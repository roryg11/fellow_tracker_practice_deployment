<div class="container">
  <h1>Add New Fellow</h1>


  <%= form_for [:staff, @fellow],  html: {class: "form-horizontal"} do |f| %>
  <div class='form-group'>
    <%= f.label :first_name, class: "col-md-1 control-label" %>
    <div class="col-md-4">
    <%= f.text_field :first_name , class: "form-control"%>
    </div>
    </div>
    <div class='form-group'>
    <%= f.label :last_name, class: "col-md-1 control-label" %>
    <div class="col-md-4">
    <%= f.text_field :last_name, class: "form-control" %>
    </div>
    </div>
    <div class='form-group'>
    <%= f.label :email, class: "col-md-1 control-label" %>
    <div class="col-md-4">
    <%= f.email_field :email, class: "form-control" %>
    </div>
    </div>
     <div class='form-group'>
    <%= f.submit "Create New Fellow", id:"submit-user-button", class: "col-md-offset-1 btn btn-info" %>
    </div>
  <%end%>

</div>
