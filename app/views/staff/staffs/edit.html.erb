<div class="container">
  <h1 class="page-header">Edit Staff Member</h1>
  <%= form_for [:staff, @staff], html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%= f.label :first_name, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-md-2 control-label"  %>
      <div class="col-md-3">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :role, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.select :role, ["Staff", "Fellow", "Coach"], {include_blank: "role"}, class: "form-control col-md-3" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "Update Staff Member", id:"submit-user-button", class: "btn btn-primary col-md-offset-2" %>
    </div>
  <%end%>
</div>
