<div class="container">
  <h1 class="page-header">Add New Staff Member</h1>
  <%= form_for [:staff, @staff], html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%= f.label :first_name, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-md-2 control-label"  %>
      <div class="col-md-3">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-3">
        <%= f.submit "Create New Staff Member", id:"submit-user-button", class: "btn btn-primary" %>
      </div>
    </div>
  <%end%>

</div>
