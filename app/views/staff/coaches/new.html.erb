<div class="container">
  <h1 class="page-header">Add New Coach</h1>
  <%= form_for [:staff, @coach], html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-3 col-md-offset-2">
      <%= f.submit "Create New Coach", id:"submit-user-button", class: "btn btn-primary" %>
    </div>
  </div>
  <%end%>

</div>
