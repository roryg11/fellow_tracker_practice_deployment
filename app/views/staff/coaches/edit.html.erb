<div class="container">
  <h1 class="page-header">Edit Coach</h1>
  <%= form_for @coach, url: staff_coach_path, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "form-label col-md-2" %>
    <div class="col-md-3">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "form-label col-md-2" %>
    <div class="col-md-3">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "form-label col-md-2" %>
    <div class="col-md-3">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role, class: "form-label col-md-2" %>
    <div class="col-md-3">
      <%= f.select :role, ["Staff", "Fellow", "Coach"], {include_blank: "Select Role"}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2">
      <%= f.submit "Update Coach", id:"submit-user-button", class: "btn btn-primary col-md-3" %>
    </div>
  </div>
  <%end%>
</div>

<div class="container">
    <%= form_for [@coach, @mentorship], url: staff_coach_mentorships_path(@coach), html: {class: "form-horizontal"} do |f| %>
    <%= render 'shared/errors', object: @mentorship %>
    <div class='form-group'>
        <%= f.label :fellow, "Add Mentee", class: "col-md-2 form-label" %>
        <div class="col-md-3">
          <%= f.collection_select :fellow_id, Fellow.all, :id, :full_name, {include_blank: "Select User to Add"}, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
    <div class="col-md-offset-2">
      <%= f.submit "Add Mentorship", id:"submit-user-button", class: "btn btn-primary col-md-3" %>
    </div>
  </div>
  <%end%>
</div>
