<div class="container">
  <h1 class="page-header">Edit Goal</h1>

<%= form_for [@user, @goal], url: goal_path(@goal), html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%=f.label :description, class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%=f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%=f.label :due_date, class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%=f.date_field :due_date, class: "form-control" %>
    </div>
  </div>
  <div class='form-group'>
   <%=f.label :notes, class: "col-md-2 control-label" %>
     <div class="col-md-3">
      <%=f.text_area :notes, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%=f.label :completed, class: "control-label col-md-2" %>
    <div class="col-md-3">
    <%=f.check_box :completed, class: "checkbox" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2">
      <%=f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Delete goal", goal_path(@goal), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
      </div>
  </div>
  </div>
<% end %>
</div>
