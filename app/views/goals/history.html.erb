<div class="container">
  <h1 class="page-header"><%= @user.first_name%> <%= @user.last_name %>'s Goal History</h1>
  <% @cohort_phase_array.each do |week| %>

  <table class="table">
    <thead>
      <h4>Week <%=week[:week_number]%>, <%=week[:start]%> - <%= week[:end] %></h4>
      <tr>
        <th>Description</th>
        <th>Due Date</th>
        <th>Completed</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% week[:goals].each do |goal| %>
        <tr>
          <td><%= goal.description %></td>
          <td><%= goal.due_date %></td>
          <td>
            <% if goal.completed %>
              <span class="glyphicon glyphicon-ok done"></span>
            <% elsif goal.overdue? %>
                <span class="glyphicon glyphicon-exclamation-sign overdue"></span>
            <% elsif goal.due_date_soon? %>
              <span class="glyphicon glyphicon-exclamation-sign due-soon"></span>
            <% end %>
          </td>
          <td>
            <% unless goal.completed %>
              <%= link_to 'Complete', goal_path(goal, goal: {completed: true}), class: 'btn btn-primary complete-goal-action', method: :put %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>
