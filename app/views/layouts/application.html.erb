<!DOCTYPE html>
<html>
<head>
  <title>FellowTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Uncollege</a>
        </div>

      <% if user_signed_in? %>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <% if current_user.role == "Staff"%>
              <li><%= link_to "Dashboard", staff_staff_path(current_user) %></li>
              <li><%= link_to 'Fellows', staff_fellows_path({role: "Fellow"}) %></li>
              <li><%= link_to 'Cohorts', staff_cohorts_path %></li>
              <li><%= link_to 'Coaches', staff_coaches_path({role: "Coach"}) %></li>
            <% elsif current_user.role == "Coach"  %>
              <li><%= link_to "Dashboard", staff_coach_path(current_user) %></li>
              <li><%= link_to 'Fellows', staff_fellows_path({role: "Fellow"}) %></li>
              <li><%= link_to 'Cohorts', staff_cohorts_path %></li>
              <li><%= link_to 'Coaches', staff_coaches_path({role: "Coach"}) %></li>
            <% else %>
              <li class="active"> <%= link_to 'Goals', goals_path(current_user) %><span class="sr-only">(current)</span></a></li>
              <li><%= link_to 'Goal History', goals_history_path(current_user) %></li>
            <% end  %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a>Welcome, <%= current_user.first_name %></a></li>
            <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
          </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link'%></li>
        </ul>
      <% end %>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>


  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

<%= yield %>
</body>
</html>
